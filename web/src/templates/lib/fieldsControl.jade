.c-fields-control-content
  each fieldName in order
    .c-field-control(field_id="#{fieldName}")
      if fields[fieldName].icon
        i(class="#{fields[fieldName].icon}",title="#{fields[fieldName].label}")
      else
        label. #{fields[fieldName].label}
      if fields[fieldName].type === 'range'
        .group
          i.icon-to-start-1.c-field-control-button(action="first")
          i.icon-fast-backward.c-field-control-button(action="previous")
          label.value #{fields[fieldName].values[fields[fieldName].activeIdx]}
          input(type="range", value="#{fields[fieldName].activeIdx}", min="0", max="#{fields[fieldName].values.length - 1}", step="1")
          i.icon-fast-forward.c-field-control-button(action="next")
          i.icon-to-end-1.c-field-control-button(action="last")
      else
        select
          each option in fields[fieldName].values
            option. #{option}