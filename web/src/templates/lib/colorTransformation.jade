.row
    label.col-sm-4.control-label(style="top:4px;position:relative;"). Color Map
    .col-sm-8
        select(data-type="colorMapName").form-control.input-sm
            each name in colormaps
                option #{name}
.row
    b.col-sm-12. Lighting

.row
    .col-sm-10.pull-right
        select(data-type="light",data-coordinate="0").form-control.input-sm
            option(value="-1") Left
            option(value="0") Center
            option(value="1") Right
    b.pull-right(style="top:4px;position:relative;")
        i.icon-resize-horizontal

.row
    .col-sm-10.pull-right
        select(data-type="light",data-coordinate="1").form-control.input-sm
            option(value="1") Top
            option(value="0") Center
            option(value="-1") Bottom
    b.pull-right(style="top:4px;position:relative;")
        i.icon-resize-vertical

.row
    .col-sm-10.pull-right
        .input-group
            input.input-sm.form-control(type="number", min="0", max="1", step="0.1", value="0.3", placeholder="Specular term", name="ks").third-width
            input.input-sm.form-control(type="number", min="0", max="1", step="0.1", value="0.6", placeholder="Diffuse term", name="kd").third-width
            input.input-sm.form-control(type="number", min="0", max="1", step="0.1", value="0.1", placeholder="Ambient term", name="ka").third-width

    b.pull-right(style="top:4px;position:relative;")
        i.icon-ajust(title="Light terms (Ambient/Diffuse/Specular)")

.row
    .col-sm-10.pull-right
        input.input-sm.form-control(type="number", min="0", max="10000", value="20", step="1", placeholder="Alpha Specular", name="alpha")
    b.pull-right(style="top:4px;position:relative;")
        i.icon-sun(title="Alpha Specular value")

.row
    .col-sm-10.pull-right
        .color(style="background: #FFFFFF;",color="1,1,1")
        .color(style="background: #cccccc;",color=".8,.8,.8")
        .color(style="background: #999999;",color=".6,.6,.6")
        .color(style="background: #FF0000;",color="1,0,0")
        .color(style="background: #00FF00;",color="0,1,0")
        .color(style="background: #0000FF;",color="0,0,1")
        .color(style="background: #FF00FF;",color="1,0,1")

    b.pull-right(style="top:4px;position:relative;")
        i.icon-tint(title="Light color")

