.btn-group
  button.btn.btn-sm.btn-default.dropdown-toggle(data-toggle="dropdown")
    | Run &nbsp;
    span.caret
  ul.dropdown-menu.dropdown-menu-right(role="menu")
    each run in runs
      li: a.c-vis-option(path="#{run.path}")= run.title
.btn-group
  button.btn.btn-sm.btn-default.dropdown-toggle(data-toggle="dropdown")
    | Layout &nbsp;
    span.caret
  ul.dropdown-menu.dropdown-menu-right(role="menu")
    li: a.c-wb-layout(data-rows="1",data-cols="1",data-template="workbenchGridLayout") 1x1
    li: a.c-wb-layout(data-rows="1",data-cols="2",data-template="workbenchGridLayout") 1x2
    li: a.c-wb-layout(data-rows="2",data-cols="2",data-template="workbenchGridLayout") 2x2
    li: a.c-wb-layout(data-rows="2",data-cols="3",data-template="workbenchGridLayout") 2x3
    li: a.c-wb-layout(data-rows="1",data-cols="2",data-template="workbenchTwoOne") 1,2
    li: a.c-wb-layout(data-rows="1",data-cols="3",data-template="workbenchThreeOne") 1,3
    li: a.c-wb-layout(data-rows="2",data-cols="3",data-template="workbenchThreeTwo") 2,3
