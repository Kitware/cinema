$textColor = #666
$highlightTextColor = #333
$disabledColor = #aaa
$disabledHighlightTextColor = #666

.c-rendering-icon
  color $textColor
  cursor pointer
  border-radius 3px

  &:hover
    background-color $disabledColor

.c-rendering-icon-disabled
  color $disabledColor

  &:hover
    color $disabledHighlightTextColor

select.input-sm.c-lookuptable-select
  height 20px
  line-height 20px
  margin-left 5px
  color $textColor
  font-weight bold
  background-color rgba(210, 210, 210, 1.0)

select.input-sm.c-fieldtable-select
  height 20px
  line-height 20px
  margin-left 5px
  color $textColor
  font-weight bold
  background-color rgba(210, 210, 210, 1.0)
