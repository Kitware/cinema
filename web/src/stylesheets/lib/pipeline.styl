$textColor = #666
$highlightTextColor = #333
$disabledColor = #aaa
$disabledHighlightTextColor = #666

.c-pipeline-element-header
  .c-pipeline-name
    padding-left 4px
    font-weight bold
    line-height 1
    color $textColor

.c-icon-disabled
  color $disabledColor

  &:hover
    color $disabledHighlightTextColor

.c-icon-enabled
  color $textColor

  &:hover
    color $highlightTextColor

.c-directory-color-select
  color $textColor

  &:hover
    color $highlightTextColor

  &:focus
    outline-style none

.c-layer-color-select
  color $textColor

  &:hover
    color $highlightTextColor

  &:focus
    outline-style none

.c-pipeline-layers-select
  float right
  color $textColor

  &:hover
    color $highlightTextColor

  &:focus
    outline-style none

.c-pipeline-layer-wrapper
  margin-left 20px

  .c-layer-name
    padding-left 4px

.popover-content.c-color-by-popover
  padding 5px 5px

.radio.c-color-by-radio
  margin-top 2px
  margin-bottom 2px

.checkbox.c-add-layers-checkbox
  margin-top 1px
  margin-bottom 1px

.popover-content.c-color-by-popover
  padding 5px 5px

.radio.c-color-by-radio
  margin-top 2px
  margin-bottom 2px

.c-color-by-label
  font-weight bold

.c-popover-close
  display inline-block
  float right
  margin-bottom 8px
  padding 2px 6px
