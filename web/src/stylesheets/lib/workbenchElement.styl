@import 'nib'

.c-run-select-container
  position relative
  top 0
  left 0
  z-index 1
  display inline-block

  .c-run-select
    border-radius 0 0 2px 0
    border-left none
    border-top none

  .dropdown-menu
    max-height 260px
    overflow-y scroll
    position relative
    top -3px
    border-radius 0 3px 3px 3px

.c-run-container
  width 100%
  height 100%

  .c-body-container.empty
    box-shadow inset 0 0 12px 1px rgba(0, 0, 0, 0.2)
    background-color #f0f0f0

  .c-side-panel
    position absolute
    z-index 1
    top 0
    right 0
    width 300px
    max-height 100%
    overflow-y scroll

    .c-side-panel-header
      background-color #626262
      color white
      font-size 12px
      height 22px
      padding 0 10px

      .c-side-panel-title
        overflow ellipsis
        display inline-block
        line-height 22px
        max-width 250px

      .c-side-panel-toggle
        color white
        cursor pointer
        line-height 22px

    .c-control-panel-body
      background-color rgba(255, 255, 255, 0.4)
      transition background-color 0.4s ease-in-out
      padding 10px 10px 10px 5px

      &:hover
        background-color rgba(255, 255, 255, 0.9)
