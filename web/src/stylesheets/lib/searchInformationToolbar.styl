$textColor = #666
$highlightTextColor = #333
$disabledColor = #aaa
$disabledHighlightTextColor = #666

.c-information-icon
  color $textColor
  cursor pointer
  border-radius 3px

  &:hover
    background-color $disabledColor

.c-information-icon-disabled
  color $disabledColor

  &:hover
    color $disabledHighlightTextColor
