$opacityDuration = 0.4s
$textColor = #666
$highlightTextColor = #333
$disabledColor = #aaa
$disabledHighlightTextColor = #666

.c-rv-left-control-area
  width 300px
  position absolute
  left 10px
  top 10px
  z-index 10

.c-rv-right-control-area
  width 300px
  position absolute
  right 10px
  top 10px
  z-index 10

.c-panel-title
  display inline-block
  font-size 15px
  font-weight bold
  color $textColor

.c-panel-toolbar
  float right

.c-control-panel
  border-radius 3px
  background-color rgba(255, 255, 255, 0.5)
  -webkit-transition background-color $opacityDuration ease-in-out
  -moz-transition background-color $opacityDuration ease-in-out
  -ms-transition background-color $opacityDuration ease-in-out
  -o-transition background-color $opacityDuration ease-in-out
  transition background-color $opacityDuration ease-in-out
  border 1px solid #d3d3d3
  margin-bottom 10px

  &:hover
    background-color rgba(255, 255, 255, 0.88)

  .c-control-panel-header
    padding 6px 10px 6px 7px
    background-color rgba(210, 210, 210, 1.0)

  .c-control-panel-body
    padding 6px 9px

  &.closed
    display none

.c-rv-viewport-container
  width 100%
  height 100%
  cursor move

.small-combobox
  height 1.5em

.c-rv-icon
  color $textColor
  cursor pointer
  border-radius 3px

  &:hover
    background-color $disabledColor

.c-rv-icon-disabled
  color $disabledColor

  &:hover
    color $disabledHighlightTextColor
