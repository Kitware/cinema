.c-search-input-container
  background-color #f7f7f5

.c-search-pipeline-control-container
  background-color white
  width 300px
  padding 10px
  border-radius 3px
  border 1px solid #e3e3e3
  margin 10px
  display inline-block

.c-search-filter-container
  display inline-block
  vertical-align top
  margin-top 10px

  #c-search-filter
    width 320px

  .c-filter-help-button
    cursor pointer

    &:hover
      box-shadow inset 0 0 2px 0 rgba(0, 0, 0, 0.3)

  .c-search-filter-apply
    margin-left 8px

.c-search-results-container
  border-top 1px solid #e8e8e8
  background-image linear-gradient(to bottom, #f2f2f2 0%, #fff 5px)

  .c-result-info-text
    font-style italic
    color #777
    padding 10px
