$textColor = #666
$highlightTextColor = #333

.c-search-input-container
  background-color #f7f7f5
  padding-right 15px

  .c-search-result-message
    display inline-block
    line-height 48px
    color $textColor
    font-weight bold

.c-search-filter-container
  display inline-block
  vertical-align top
  margin 9px 12px

  #c-search-filter
    width 320px

  .c-filter-help-button
    cursor pointer

    &:hover
      box-shadow inset 0 0 2px 0 rgba(0, 0, 0, 0.3)

  .btn
    margin-left 8px

.c-search-results-container
  border-top 1px solid #e8e8e8
  background-image linear-gradient(to bottom, #f2f2f2 0%, #fff 5px)
  min-height 30px

  .c-result-info-text
    font-style italic
    color $textColor
    padding 10px

  .c-search-result-wrapper
    width 400px
    height 400px
    border 1px solid #e3e3e3
    border-radius 3px
    display inline-block
    margin 10px

.c-search-page-bottom
  height 100px
