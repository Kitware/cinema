$headerTextColor = #fdfcfc
$headerHighlightColor = #555
$headerHeight = 40px

.c-header-content
  color $headerTextColor
  padding 0 12px 0 18px

.c-app-title
  display inline-block
  line-height $headerHeight
  font-weight bold
  font-size 20px

.c-header-icon-container
  float left
  i
    line-height $headerHeight
    color $headerTextColor
    cursor pointer
    border-radius 3px
    padding 5px

    &:hover
      background-color $headerHighlightColor

.c-header-buttons-container
  float right
  a
    line-height $headerHeight
    color $headerTextColor
    cursor pointer
    border-radius 3px
    padding 5px

    &:hover
      background-color $headerHighlightColor
