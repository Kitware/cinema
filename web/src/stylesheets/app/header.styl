$headerTextColor = #fdfcfc
$headerHighlightColor = #555
$headerHeight = 40px

.c-header-container
  color $headerTextColor
  padding 0 12px 0 18px

  .btn-group
    margin-left 25px
    top -2px

  .btn
    background-color #555
    color #999
    width 40px

    &.active
      background-color #222
      color #fff

.c-app-icon
  font-size 20px
  margin-right 10px

.c-app-title
  display inline-block
  line-height $headerHeight
  font-weight bold
  font-size 20px

.header-left
  float left
  i
    line-height $headerHeight
    color $headerTextColor
    cursor pointer
    border-radius 3px
    padding 5px

    &:hover
      background-color $headerHighlightColor

.header-right
  float right
  a
    line-height $headerHeight
    color $headerTextColor
    cursor pointer
    border-radius 3px
    padding 5px

    &:hover
      background-color $headerHighlightColor

  input.c-search-filter.input-sm
    width 320px
    height 26px
    padding 2px
    border 1px inset

